@model IEnumerable<IMS.Models.User>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">👥 Manage User Permissions</h5>
            <a asp-controller="Users" asp-action="Create" class="btn btn-sm btn-light">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-primary"
                                       asp-action="EditPermissions"
                                       asp-route-userId="@user.Id">
                                        <i class="bi bi-shield-lock"></i> Edit Permissions
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
