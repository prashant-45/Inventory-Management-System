@model IEnumerable<IMS.Models.User>
@{
    ViewData["Title"] = "User Management";
    var pagination = ViewBag.Pagination as IMS.ViewModels.PaginationInfo;
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container py-4">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="text-primary mb-2"><i class="bi bi-people-fill me-2"></i>User Management</h2>
            <p class="text-muted mb-0">Manage user permissions and access levels</p>
        </div>
        <a asp-controller="User" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Add New User
        </a>
    </div>

    <!-- Search and Filter Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="ManagePermissions" id="searchForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label fw-semibold">Search Users</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" name="searchTerm" value="@searchTerm"
                                   class="form-control border-start-0"
                                   placeholder="Search by name, email, or mobile number..." />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Items per page</label>
                        <select name="pageSize" class="form-select" onchange="this.form.submit()">
                            <option value="10" selected="@(pagination?.PageSize == 10)">10</option>
                            <option value="25" selected="@(pagination?.PageSize == 25)">25</option>
                            <option value="50" selected="@(pagination?.PageSize == 50)">50</option>
                            <option value="100" selected="@(pagination?.PageSize == 100)">100</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-filter me-1"></i> Apply
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0 d-flex align-items-center">
                <i class="bi bi-list-check me-2 text-primary"></i> User List
                @if (pagination != null)
                {
                    <span class="badge bg-secondary ms-2">@pagination.TotalItems users</span>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">User</th>
                            <th>Email</th>
                            <th>Mobile Number</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="ps-4" data-label="User">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle-sm bg-primary text-white d-flex align-items-center justify-content-center me-3">
                                                @user.UserName?[0].ToString().ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@user.UserName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-label="Email">
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1 text-muted"></i>@user.Email
                                        </a>
                                    </td>
                                    <td data-label="Mobile Number">
                                        @if (!string.IsNullOrEmpty(user.MobileNumber))
                                        {
                                            <a href="tel:@user.MobileNumber" class="text-decoration-none">
                                                <i class="bi bi-phone me-1 text-muted"></i>@user.MobileNumber
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not provided</span>
                                        }
                                    </td>
                                    <td class="text-center pe-4" data-label="Actions">
                                        <div class="d-flex justify-content-center gap-2">
                                            <!-- 👁 View Profile -->
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-controller="User"
                                               asp-action="Profile"
                                               asp-route-id="@user.Id"
                                               title="View Profile">
                                                <i class="bi bi-person-lines-fill me-1"></i> Profile
                                            </a>

                                            <!-- 🔒 Manage Permissions -->
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-action="EditPermissions"
                                               asp-route-userId="@user.Id"
                                               title="Manage Permissions">
                                                <i class="bi bi-shield-lock me-1"></i> Permissions
                                            </a>
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="bi bi-people display-4 text-muted d-block mb-3"></i>
                                    <h5 class="text-muted">No users found</h5>
                                    <p class="text-muted">@(!string.IsNullOrEmpty(searchTerm) ? "Try adjusting your search criteria" : "Get started by adding a new user")</p>
                                    @if (string.IsNullOrEmpty(searchTerm))
                                    {
                                        <a asp-controller="Users" asp-action="Create" class="btn btn-primary mt-2">
                                            <i class="bi bi-plus-circle me-1"></i> Add User
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (pagination != null && pagination.TotalItems > 0)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 gap-3">
            <div class="text-muted small">
                Showing <strong>@pagination.StartRecord</strong> to <strong>@pagination.EndRecord</strong> of <strong>@pagination.TotalItems</strong> users
            </div>

            <nav aria-label="User pagination">
                <ul class="pagination pagination-sm mb-0 flex-wrap justify-content-center">
                    <li class="page-item @(pagination.Page == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="ManagePermissions"
                           asp-route-page="@(pagination.Page - 1)"
                           asp-route-pageSize="@pagination.PageSize"
                           asp-route-searchTerm="@searchTerm">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @{
                        int startPage = Math.Max(1, pagination.Page - 2);
                        int endPage = Math.Min(pagination.TotalPages, startPage + 4);
                        startPage = Math.Max(1, endPage - 4);
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(pagination.Page == i ? "active" : "")">
                            <a class="page-link"
                               asp-action="ManagePermissions"
                               asp-route-page="@i"
                               asp-route-pageSize="@pagination.PageSize"
                               asp-route-searchTerm="@searchTerm">@i</a>
                        </li>
                    }

                    <li class="page-item @(pagination.Page == pagination.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="ManagePermissions"
                           asp-route-page="@(pagination.Page + 1)"
                           asp-route-pageSize="@pagination.PageSize"
                           asp-route-searchTerm="@searchTerm">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced search with debounce
            const searchInput = document.querySelector('input[name="searchTerm"]');
            const searchForm = document.getElementById('searchForm');
            
            if (searchInput && searchForm) {
                let typingTimer;
                const typingDelay = 500;
                
                searchInput.addEventListener('keyup', function() {
                    clearTimeout(typingTimer);
                    typingTimer = setTimeout(() => {
                        searchForm.submit();
                    }, typingDelay);
                });
                
                searchInput.addEventListener('keydown', function() {
                    clearTimeout(typingTimer);
                });
            }
        });
    </script>

    <style>
        .avatar-circle-sm {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-weight: 600;
        }
        
        .card {
            border-radius: 0.75rem;
            overflow: hidden;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            color: #6c757d;
            background-color: #f8f9fa;
        }
        
        .table td {
            border-color: #f1f3f7;
            padding: 1rem 0.75rem;
            vertical-align: middle;
        }
        
        .btn {
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        
        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
       
    </style>
}