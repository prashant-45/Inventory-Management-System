@model IMS.Models.UserPermissionViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">🔒 Edit Permissions for <strong>@Model.UserName</strong></h5>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="row">
                    @foreach (var perm in Model.Permissions)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="form-check border rounded p-2 shadow-sm d-flex align-items-center">
                                <input class="form-check-input" style="margin-right:6px;"
                                       type="checkbox"
                                       asp-for="@perm.IsAssigned"
                                       value="true"
                                       name="Permissions[@Model.Permissions.IndexOf(perm)].IsAssigned" />

                                <label class="form-check-label fw-semibold mb-0">
                                    @perm.PermissionName
                                </label>

                                <input type="hidden" name="Permissions[@Model.Permissions.IndexOf(perm)].PermissionId" value="@perm.PermissionId" />
                                <input type="hidden" name="Permissions[@Model.Permissions.IndexOf(perm)].PermissionName" value="@perm.PermissionName" />
                            </div>
                        </div>



                    }
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="ManagePermissions" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
