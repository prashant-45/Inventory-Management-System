@model IMS.ViewModels.ForgotPasswordViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4 border-0" style="width: 100%; max-width: 400px; border-radius: 18px; background-color: #fff;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-dark">Forgot Password</h2>
            <p class="text-muted" style="font-size: 14px;">Enter your username and new password</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold text-dark">Username</label>
                <input asp-for="UserName" class="form-control border-dark rounded-3" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold text-dark">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control border-dark rounded-3" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold text-dark">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control border-dark rounded-3" placeholder="Re-enter new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-dark w-100 rounded-3 fw-semibold py-2">Reset Password</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-dark small">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
