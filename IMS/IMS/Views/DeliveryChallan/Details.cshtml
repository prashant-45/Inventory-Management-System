@model IMS.ViewModels.DeliveryChallanViewModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <h2 class="mb-2">Challan Details</h2>
        <a asp-action="Index" class="btn btn-secondary mb-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Card for challan info -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Challan Information</h5>
            <dl class="row">
                <dt class="col-sm-3">Challan No</dt>
                <dd class="col-sm-9">@Model.ChallanNumber</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("dd-MM-yyyy")</dd>

                <dt class="col-sm-3">Receiver Name</dt>
                <dd class="col-sm-9">@Model.ReceiverName</dd>

                <dt class="col-sm-3">Receiver Phone</dt>
                <dd class="col-sm-9">@Model.ReceiverPhone</dd>

                @* <dt class="col-sm-3">Reference</dt>
                <dd class="col-sm-9">@Model.ReferenceNumber</dd> *@
            </dl>
        </div>
    </div>

    <!-- Card for challan items -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Items</h5>

            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>ModelNo</th>
                                <th>Particulars</th>
                                <th>Quantity</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Items.Count; i++)
                            {
                                if (Model.Items[i].Id == 0) { continue; } // skip blank default item
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.Items[i].ModelNo</td>
                                    <td>@Model.Items[i].Particulars</td>
                                    <td>@Model.Items[i].Quantity</td>
                                    <td>@Model.Items[i].Remarks</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No items available for this challan.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <button type="button"
                class="btn btn-sm btn-danger"
                data-bs-target="#deleteModal"
                data-bs-toggle="modal"
                data-id="@Model.Id"
                >
            Delete
        </button>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm modal-md modal-lg">
        <div class="modal-content rounded-3 shadow-lg">
            <form method="post" asp-action="DeleteConfirmed" class="w-100">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <input type="hidden" name="id" id="deleteId" />
                    <p class="fs-6 mb-0">
                        Are you sure you want to delete <strong class="text-danger">?</strong>
                        
                    </p>
                </div>
                <div class="modal-footer justify-content-center gap-2">
                    <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-1"></i> Yes, Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var id = button.getAttribute('data-id');
        var name = button.getAttribute('data-name');

        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').innerText = name;
    });
</script>
