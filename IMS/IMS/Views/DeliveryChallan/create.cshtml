@model IMS.ViewModels.DeliveryChallanViewModel
@{
    ViewData["Title"] = "Create Delivery Challan";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h3 class="mb-2">Create Delivery Challan</h3>
        <a asp-controller="DeliveryChallan" asp-action="Index" class="btn btn-secondary">
            ← Back to List
        </a>
    </div>

    <form asp-action="Create" method="post" id="challanForm" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <!-- Top Row -->
        <div class="row g-3">
            <div class="col-md-4 col-12">
                <label asp-for="ChallanNumber" class="form-label">Challan No.</label>
                <input asp-for="ChallanNumber" class="form-control" readonly />
                <span asp-validation-for="ChallanNumber" class="text-danger"></span>
            </div>
            <div class="col-md-4 col-12">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <!-- Receiver Info -->
        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label asp-for="ReceiverName" class="form-label">Receiver Name</label>
                <input asp-for="ReceiverName" class="form-control" />
                <span asp-validation-for="ReceiverName" class="text-danger"></span>
            </div>
            <div class="col-md-6 col-12">
                <label asp-for="ReceiverPhone" class="form-label">Receiver Phone</label>
                <input asp-for="ReceiverPhone"
                       type="text"
                       class="form-control"
                       inputmode="numeric"
                       pattern="\d{10}"
                       maxlength="10"
                       oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                       placeholder="10 digit mobile number" />

                <span asp-validation-for="ReceiverPhone" class="text-danger"></span>
            </div>

        </div>

        <hr />

        <!-- Items Table -->
        <h5 class="mb-2">Items</h5>
        <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle" id="itemsTable">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%">#</th>
                        <th>Model / Part No</th>
                        <th>Particulars / Description</th>
                        <th style="width:15%">Qty</th>
                        <th style="width:20%">Remarks</th>
                        <th style="width:8%"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        <tr data-index="@i">
                            <td>@(@i + 1)</td>
                            <td><input name="Items[@i].ModelNo" class="form-control form-control-sm" /></td>
                            <td><input name="Items[@i].Particulars" class="form-control form-control-sm" /></td>
                            <td><input name="Items[@i].Quantity" type="number" min="1" class="form-control form-control-sm" value="1" /></td>
                            <td><input name="Items[@i].Remarks" class="form-control form-control-sm" /></td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-danger remove-row">×</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mb-3">
            <button type="button" id="addRow" class="btn btn-sm btn-outline-primary">+ Add Item</button>
        </div>

        <!-- Save Button -->
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success px-4">Save & Send WhatsApp</button>
        </div>
    </form>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        (function () {
            function reindexRows() {
                $('#itemsTable tbody tr').each(function (i) {
                    $(this).attr('data-index', i);
                    $(this).find('td:first').text(i + 1);
                    $(this).find('input').each(function () {
                        var name = $(this).attr('name');
                        var newName = name.replace(/Items\[\d+\]/, 'Items[' + i + ']');
                        $(this).attr('name', newName);
                    });
                });
            }

            $('#addRow').on('click', function () {
                var index = $('#itemsTable tbody tr').length;
                var tr = `<tr data-index="${index}">
                                    <td>${index + 1}</td>
                                    <td><input name="Items[${index}].ModelNo" class="form-control form-control-sm" /></td>
                                    <td><input name="Items[${index}].Particulars" class="form-control form-control-sm" /></td>
                                    <td><input name="Items[${index}].Quantity" type="number" min="1" value="1" class="form-control form-control-sm" /></td>
                                    <td><input name="Items[${index}].Remarks" class="form-control form-control-sm" /></td>
                                    <td class="text-center"><button type="button" class="btn btn-sm btn-danger remove-row">×</button></td>
                                  </tr>`;
                $('#itemsTable tbody').append(tr);
            });

            $('#itemsTable').on('click', '.remove-row', function () {
                $(this).closest('tr').remove();
                reindexRows();
            });

            if ($('#itemsTable tbody tr').length === 0) $('#addRow').click();
        })();

    </script>
}
